@model WebApplication.ViewModels.Companies.CompanyEditViewModel

@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "Errors:", new { @class = "alert alert-danger" })

<div class="form-group">
    @Html.LabelFor(m => m.Entity.Name, htmlAttributes: new { @class = "control-label col-md-2 required" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.Entity.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name" } })
        @Html.ValidationMessageFor(m => m.Entity.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </button>
        <a href="@Url.Action("Index")" class="btn btn-default">
            <span class="glyphicon glyphicon-ban-circle"></span> Close
        </a>
    </div>
</div>


